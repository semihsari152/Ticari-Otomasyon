@model EntityLayer.Concrete.Category


@{
    ViewData["Title"] = "CategoryImageUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="page-header">
    <h3 class="page-title"> Kategori Fotoğraf Güncelleme </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Category/Index/">Kategoriler</a></li>
            <li class="breadcrumb-item active" aria-current="page">Kategori Fotoğraf Güncelleme</li>
        </ol>
    </nav>
</div>

<br />

@using (Html.BeginForm("CategoryImageUpdate", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="card">
        <div class="card-body">

            @Html.HiddenFor(x => x.CategoryID)
            @Html.HiddenFor(x => x.CategoryName)
            @Html.HiddenFor(x => x.CategoryStatus)
  

            <br />



            @Html.Label("Görsel")
            <input type="file" name="CategoryImage" class="form-control">

            <br />
            <button class="btn btn-success">Güncelle</button>

        </div>
    </div>
}
