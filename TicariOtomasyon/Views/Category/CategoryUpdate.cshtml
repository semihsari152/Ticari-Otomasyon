@model EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "CategoryUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h3 class="page-title"> Kategori Güncelleme </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Category/Index/">Kategoriler</a></li>
            <li class="breadcrumb-item active" aria-current="page">Kategori Güncelleme</li>
        </ol>
    </nav>
</div>

<br />
@using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="card">
        <div class="card-body">

            @Html.HiddenFor(x => x.CategoryID)
            @Html.HiddenFor(x => x.CategoryStatus)

            <br />

            @Html.Label("Kategori Adı")
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })

  
            <br />

            <button class="btn btn-success">Güncelle</button>
        </div>

    </div>

}

