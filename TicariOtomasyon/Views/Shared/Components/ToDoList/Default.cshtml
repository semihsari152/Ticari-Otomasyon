@using EntityLayer.Concrete
@model List<ToDoList>

<div class="col-md-12 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yapılacaklar</h4>

            <form class="form-group" method="post">

                <div class="add-items d-flex">
                    <input type="text" class="form-control todo-list-input" name="ToDoListName">
                    <button type="submit" class="add btn btn-primary todo-list-add-btn">Ekle</button>
                </div>

                </form>

                <div class="list-wrapper">
                    <ul class="d-flex flex-column-reverse text-white todo-list todo-list-custom">
                        @foreach (var item in Model)
                        {
                        <li>
                            <div class="form-check form-check-primary">
                                <label class="form-check-label">
                                    <input class="checkbox" type="checkbox"> @item.ToDoListName
                                </label>
                            </div>
                            <a class="remove" href="/ToDoList/ListDelete/@item.ToDoListID"><i class="mdi mdi-close-box"></i></a>
                        </li>

                        }
                    </ul>
                </div>
        </div>
    </div>
</div>