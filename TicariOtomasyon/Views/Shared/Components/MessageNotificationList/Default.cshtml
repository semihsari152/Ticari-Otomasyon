@using EntityLayer.Concrete
@model List<Message>

<li class="nav-item dropdown border-left">
    <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
        <i class="mdi mdi-email"></i>
        <span class="count bg-success"></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
        <h6 class="p-3 mb-0">Mesajlar</h6>
        <div class="dropdown-divider"></div>
        @foreach (var item in Model)
        {
            <a class="dropdown-item preview-item">
                <div class="preview-thumbnail">
                    <img src="/panel/template/assets/images/faces/face4.jpg" alt="image" class="rounded-circle profile-pic">
                </div>
                <div class="preview-item-content">
                    <p class="preview-subject ellipsis mb-1">@item.MessageSender sana bir mesaj gönderdi.</p>
                    <p class="text-muted mb-0"> @*1 dakika önce*@ @item.MessageDate.ToShortDateString() </p>
                </div>
            </a>
            <div class="dropdown-divider"></div>
        }
        <div class="dropdown-divider"></div>
        <p class="p-3 mb-0 text-center"><a style="color:inherit" href="/Message/AllMessages/">Tümünü görüntüle</a></p>
    </div>
</li>