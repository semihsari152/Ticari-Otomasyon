@using EntityLayer.Concrete
@model List<Message>

<div class="col-md-6 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title">Messages</h4>
                <p class="text-muted mb-1 small"><a href="/Message/AllMessages/">View all</a></p>
            </div>
            <div class="preview-list">
                @foreach (var item in Model)
                {
                <div class="preview-item border-bottom">
                    <div class="preview-thumbnail">
                        <img src="/panel/template/assets/images/faces/face6.jpg" alt="image" class="rounded-circle" />
                    </div>
                    <div class="preview-item-content d-flex flex-grow">
                        <div class="flex-grow">
                            <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                <h6 class="preview-subject">@item.MessageSender</h6>
                                <p class="text-muted text-small">@item.MessageDate.ToShortDateString()</p>
                            </div>
                            <p class="text-muted">@item.MessageDetails</p>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>