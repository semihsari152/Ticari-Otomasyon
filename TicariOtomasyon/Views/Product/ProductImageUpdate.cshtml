@model EntityLayer.Concrete.Product


@{
    ViewData["Title"] = "ProductImageUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="page-header">
    <h3 class="page-title"> Ürün Fotoğraf Güncelleme </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Product/Index/">Ürünler</a></li>
            <li class="breadcrumb-item active" aria-current="page">Ürün Fotoğraf Güncelleme</li>
        </ol>
    </nav>
</div>

<br />

@using (Html.BeginForm("ProductImageUpdate", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="card">
        <div class="card-body">

            @Html.HiddenFor(x => x.ProductID)
            @Html.HiddenFor(x => x.ProductMark)
            @Html.HiddenFor(x => x.ProductName)
            @Html.HiddenFor(x => x.ProductStatus)
            @Html.HiddenFor(x => x.ProductStock)
            @Html.HiddenFor(x => x.CategoryID)
            @Html.HiddenFor(x => x.SalePrice)
            @Html.HiddenFor(x => x.PurchasePrice)

            <br />



            @Html.Label("Görsel")
            <input type="file" name="ProductImage" class="form-control">

            <br />
            <button class="btn btn-success">Güncelle</button>

        </div>
    </div>
}
