@model EntityLayer.Concrete.Product

@{
    ViewData["Title"] = "ProductUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h3 class="page-title"> Ürün Güncelleme </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Product/Index/">Ürünler</a></li>
            <li class="breadcrumb-item active" aria-current="page">Ürün Güncelleme</li>
        </ol>
    </nav>
</div>

<br />

@using (Html.BeginForm("ProductUpdate", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="card">
        <div class="card-body">

            @Html.HiddenFor(x => x.ProductID)

            @Html.Label("Ürün Adı")
            @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
            <br />

            @Html.Label("Marka")
            @Html.TextBoxFor(x => x.ProductMark, new { @class = "form-control" })
            <br />

            @Html.Label("Stok Adedi")
            @Html.TextBoxFor(x => x.ProductStock, new { @class = "form-control" })
            <br />

            @Html.Label("Alış Fiyatı")
            @Html.TextBoxFor(x => x.PurchasePrice, new { @class = "form-control" })
            <br />

            @Html.Label("Satış Fiyatı")
            @Html.TextBoxFor(x => x.SalePrice, new { @class = "form-control" })
            <br />

            @Html.Label("Kategori")
            @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.pv, new { @class = "form-control" })
            <br />


            <button class="btn btn-success">Güncelle</button>
        </div>
        </div>

        }

