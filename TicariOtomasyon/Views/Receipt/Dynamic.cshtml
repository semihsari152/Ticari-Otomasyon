@model TicariOtomasyon.Models.DynamicReceiptModal

@{
    ViewBag.Title = "Dynamic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <h2 class="panel-title pull-left" style="margin-left:10px;">
                <strong>Fatura & Kalem İşlemleri</strong>
            </h2>
            <button style="margin-right:10px" class="btn btn-primary pull-right" onclick="addNewOrder()">Fatura Girişi</button>
        </div>
    </div>
    @*Fatura Listesi*@

    @foreach (var item in Model.value1)
    {
        <div class="panel-body">
            <table class="table table-striped table-responsive">
                <tbody>
                    <tr>
                        <td>Seri-SıraNo : @item.ReceiptSerialNumber-@item.ReceiptLineNumber</td>
                        <td>Cari : @item.ReceiptReceiver</td>
                        <td>Tarih : @item.ReceiptDate</td>
                        <td>Tarih : @item.ReceiptTaxAuthority</td>
                    </tr>
                    <tr>
                        <td colspan="4">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th>Açıklama</th>
                                        <th>Miktar</th>
                                        <th>Fiyat</th>
                                        <th>Tutar</th>
                                    </tr>
                                    @{
                                        var totalBill = 0;
                                    }
                                    @foreach (var order in item.ReceiptDetails)
                                    {
                                        <tr>
                                            <td>@order.ReceiptDetailsDescription</td>
                                            <td>@order.ReceiptDetailsAmount</td>
                                            <td>@order.ReceiptDetailsUnitPrice</td>
                                            <td>@order.ReceiptDetailsTotal</td>
                                        </tr>
                                        totalBill = totalBill + @Convert.ToInt32(order.ReceiptDetailsTotal);
                                    }
                                </tbody>
                            </table>
                            <span class="pull-right" style="margin-right:100px;"><strong>Fatura Toplam Tutar :  </strong> @totalBill</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    }
</div>



<div class="modal fade" id="newOrderModal">
    <div class="modal-dialog modal-lg" style=" width: 900px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>Yeni Fatura Girişi</h4>
            </div>
            <form id="NewOrderForm">
                <div class="modal-body">
                    @*Fatura Details*@
                    <h5 style="color:#ff6347">Fatura Detayları</h5>
                    <hr />
                    <div class="form-horizontal">
                        <input type="hidden" id="ReceiptID" />
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Seri No
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="receiptSerialNumber" name="receiptSerialNumber" placeholder="Seri Numarası" class="form-control" />
                            </div>
                            <label class="control-label col-md-2">
                                Sıra No
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="receiptLineNumber" name="receiptLineNumber" placeholder="Sıra Numarası" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Tarih
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="receiptDate" name="receiptDate" placeholder="Tarihi Giriniz" class="form-control" />
                            </div>
                            <label class="control-label col-md-2">
                                Vergi Dairesi
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="receiptTaxAuthority" name="receiptTaxAuthority" placeholder="Vergi Dairesi" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Saat
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="receiptTime" name="receiptTime" placeholder="Saati Girin" class="form-control" />
                            </div>
                            <label class="control-label col-md-2">
                                Teslim Eden
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="receiptSupplier" name="receiptSupplier" placeholder="Teslim Eden Cari/Personel" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Teslim Alan
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="receiptReceiver" name="receiptReceiver" placeholder="Teslim Alan Cari/Personel" class="form-control" />
                            </div>
                            <label class="control-label col-md-2">
                                Toplam Tutar
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="receiptTotal" name="receiptTotal" placeholder="Toplam Tutar" class="form-control" />
                            </div>
                        </div>
                    </div>
                    @*Fatura Kalemleri*@
                    <h5 style="margin-top:10px;color:#ff6347">Fatura Kalemleri</h5>
                    <hr />
                    <div class="form-horizontal">
                        <input type="hidden" id="ReceiptDetailsId" />
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Açıklama
                            </label>
                            <div class="col-md-4">
                                <input type="text" id="receiptDetailsDescription" name="receiptDetailsDescription" placeholder="Ürün / Birim Açıklamasını Giriniz" class="form-control" />
                            </div>
                            <label class="control-label col-md-2">
                                Fiyat
                            </label>
                            <div class="col-md-4">
                                <input type="number" id="receiptDetailsUnitPrice" name="receiptDetailsUnitPrice" placeholder="Birim Başına Fiyat Miktarı" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Miktar
                            </label>
                            <div class="col-md-4">
                                <input type="number" id="receiptDetailsAmount" name="receiptDetailsAmount" placeholder="Miktar Giriniz" class="form-control" />
                            </div>
                            <div class="col-md-2 col-lg-offset-4">
                                <a id="addToList" class="btn btn-primary">Listeye Ekle</a>
                            </div>
                        </div>

                        <table id="detailsTable" class="table">
                            <thead>
                                <tr>
                                    <th style="width:30%">Açıklama</th>
                                    <th style="width:20%">Miktar</th>
                                    <th style="width:15%">Fiyat</th>
                                    <th style="width:25%">Tutar</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-default" data-dismiss="modal">Kapat</button>
                    <button id="saveOrder" type="submit" class="btn btn-danger">Faturayı Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>



@section scripts{
    <script type="text/javascript">
        //Show Modal.
        function addNewOrder() {
            $("#newOrderModal").modal();
        }
        //Add Multiple Order.
        $("#addToList").click(function (e) {
            e.preventDefault();

            if ($.trim($("#receiptDetailsDescription").val()) == "" || $.trim($("#receiptDetailsUnitPrice").val()) == "" || $.trim($("#receiptDetailsAmount").val()) == "") return;

            var receiptDetailsDescription = $("#receiptDetailsDescription").val(),
                receiptDetailsUnitPrice = $("#receiptDetailsUnitPrice").val(),
                receiptDetailsAmount = $("#receiptDetailsAmount").val(),
                detailsTableBody = $("#detailsTable tbody");

            var degerler = '<tr><td>' + receiptDetailsDescription + '</td><td>' + receiptDetailsAmount + '</td><td>' + receiptDetailsUnitPrice + '</td><td>' + (parseFloat(receiptDetailsUnitPrice) * parseInt(receiptDetailsAmount)) + '</td><td><a data-itemId="0" href="#" class="deleteItem">Çıkar</a></td></tr>';
            detailsTableBody.append(degerler);
            clearItem();
        });
        //After Add A New Order In The List, Clear Clean The Form For Add More Order.
        function clearItem() {
            $("#receiptDetailsDescription").val('');
            $("#receiptDetailsUnitPrice").val('');
            $("#receiptDetailsAmount").val('');
        }
        // After Add A New Order In The List, If You Want, You Can Remove It.
        $(document).on('click', 'a.deleteItem', function (e) {
            e.preventDefault();
            var $self = $(this);
            if ($(this).attr('data-itemId') == "0") {
                $(this).parents('tr').css("background-color", "#ff6347").fadeOut(800, function () {
                    $(this).remove();
                });
            }
        });
        //After Click Save Button Pass All Data View To Controller For Save Database
        function saveOrder(data) {
            return $.ajax({
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                type: 'POST',
                url: "/Receipt/ReceiptSave",
                data: data,
                success: function (result) {
                    alert(result);
                    location.reload();
                },
                error: function () {
                    alert("Error!")
                }
            });
        }
        //Collect Multiple Order List For Pass To Controller
        $("#saveOrder").click(function (e) {
            e.preventDefault();

            var orderArr = [];
            orderArr.length = 0;

            $.each($("#detailsTable tbody tr"), function () {
                orderArr.push({
                    receiptDetailsDescription: $(this).find('td:eq(0)').html(),
                    receiptDetailsAmount: $(this).find('td:eq(1)').html(),
                    receiptDetailsUnitPrice: $(this).find('td:eq(2)').html(),
                    receiptDetaisTotal : $(this).find('td:eq(3)').html()
                });
            });


            var data = JSON.stringify({
                receiptSerialNumber: $("#receiptSerialNumber").val(),
                receiptLineNumber: $("#receiptLineNumber").val(),
                receiptDate: $("#receiptDate").val(),
                receiptTime: $("#receiptTime").val(),
                receiptTaxAuthority: $("#receiptTaxAuthority").val(),
                receiptSupplier: $("#receiptSupplier").val(),
                receiptReceiver: $("#receiptReceiver").val(),
                receiptTotal: $("#receiptTotal").val(),
                kalemler: orderArr
            });

            $.when(saveOrder(data)).then(function (response) {
                console.log(response);
            }).fail(function (err) {
                console.log(err);
            });
        });
    </script>
}
