@using EntityLayer.Concrete
@model List<Current>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Profil </th>
                            <th> İsim Soyisim </th>
                            <th> Mail </th>
                            <th> Şehir </th>
                            <th> Güncelle </th>
                            <th> Detaylar </th>
                            <th> Sil </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                  <a href="/Current/CurrentImageUpdate/@item.CurrentID"><img src="@item.CurrentImage" alt="image" /></a>  
                                </td>
                                <td> @item.CurrentName @item.CurrentSurname </td>
                                <td> @item.CurrentMail </td>
                                <td> @item.CurrentCity </td>
                                <td><a href="/Current/CurrentUpdate/@item.CurrentID" class="badge badge-warning">Güncelle</a></td>
                                <td><a href="/Current/CurrentSaleMovements/@item.CurrentID" class="badge badge-primary">Detaylar</a></td>
                                <td><a href="/Current/CurrentDelete/@item.CurrentID" class="badge badge-danger">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>