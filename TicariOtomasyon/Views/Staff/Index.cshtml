@using EntityLayer.Concrete
@model List<Staff>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Profil </th>
                            <th> İsim Soyisim </th>
                            <th> Mail </th>
                            <th> Satışlar </th>
                            <th> Güncelle </th>
                            <th> Sil </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <a href="/Staff/StaffImageUpdate/@item.StaffID"><img src="@item.StaffImage" alt="image" /></a>
                                </td>
                                <td> @item.StaffName @item.StaffSurname </td>
                                <td> @item.StaffMail </td>
                                <td><a href="/Department/DepartmentStaffMovements/@item.StaffID" class="badge badge-warning">Satışlar</a></td>
                                <td><a href="/Staff/StaffUpdate/@item.StaffID" class="badge badge-primary">Güncelle</a></td>
                                <td><a href="/Staff/StaffDelete/@item.StaffID" class="badge badge-danger">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>